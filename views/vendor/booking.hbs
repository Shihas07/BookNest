 <script>
   
  function cancelBooking(bookingid) {
         const userid = document.querySelector('.userid-' + bookingid).value;

        console.log("guygduhug",userid)

    axios.post('/venor/cancelbooking', { bookingid: bookingid,userid: userid })
      .then(response => {
        console.log('Booking cancelled:', response.data);
         
                window.location.reload() 
      })
      .catch(error => {
        console.error('There was an error cancelling the booking!', error);
      });
  }

  function checkIn(bookingid) {
       const userid = document.querySelector('.userid-' + bookingid).value;

    axios.post('/vendor/checkinbooking', { bookingid: bookingid ,userid:userid})
      .then(response => {
        console.log('Checked in:', response.data);
        // Optionally, update the UI to reflect the check-in
        window.location.reload()
      })
      .catch(error => {
        console.error('There was an error checking in!', error);
      });
  }
    function checkOut(bookingid) {
       const userid = document.querySelector('.userid-' + bookingid).value;

    axios.post("/vendor/checkoutbooking", { bookingid: bookingid ,userid:userid})
      .then(response => {
        console.log('Checked in:', response.data);
        // Optionally, update the UI to reflect the check-in
        window.location.reload()
      })

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add click event listener to all open-review-modal buttons
    document.querySelectorAll('.open-review-modal').forEach(function(button) {
        button.addEventListener('click', function() {
            // Retrieve the room ID from the button's data attribute
        const roomId = this.getAttribute('data-roomid');
            console.log("jkjdkj",roomId)
            // Open the modal with the corresponding ID
            $('#exampleModal-'+roomId).modal('show');
        });
    });

    
    document.querySelectorAll('[id^="saveReviewBtn"]').forEach(function(button) {
        button.addEventListener('click', function () {
            // Retrieve the selected rating, comment, and room ID
            const rating = document.querySelector('input[name="rating-' + this.id.split('-')[1] + '"]:checked');
            const comment = document.getElementById('comment-' + this.id.split('-')[1]).value;
            const roomId = document.getElementById("roomid-" + this.id.split('-')[1]).value;

            console.log("Rating:", rating);
            console.log("Comment:", comment);
            console.log("Room ID:", roomId);

            // Validate that both rating and comment are provided
            if (rating && comment) {
                // Data to send to the server
                const reviewData = {
                    roomId: roomId,
                    rating: rating.value,
                    comment: comment
                };

                // Send the review data to the server using Axios
                axios.post('/addreview', reviewData)
                .then(response => {
                    console.log('Review submitted:', response.data);

                    // Close the modal
                    $('#exampleModal-' + roomId).modal('hide');
                    // Alert user
                    alert('Thank you for your review!');
                    // Optionally reload the page after a successful review
                    window.location.reload();
                })
                .catch(error => {
                    console.error('Error submitting review:', error);
                    // Display error message to user if needed
                    alert('There was an error submitting your review. Please try again later.');
                });
            } else {
                // Alert user if rating or comment is missing
                alert('Please provide a rating and a comment.');
            }
        });
    });
});
</script>







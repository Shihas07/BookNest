document.addEventListener("DOMContentLoaded", function() {
  const statuses = document.querySelectorAll('.status');

  statuses.forEach(function(statusElem) {
    const status = statusElem.textContent.trim().replace('Status: ', '').trim();
    console.log(status);

    const paymentMessage = statusElem.nextElementSibling;

    if (status === "cancel") {
      paymentMessage.innerHTML = "Your payment refund in 48 hours";
      paymentMessage.style.color = "red";

      const closestCard = statusElem.closest('.card');
      var cancelButton = closestCard.querySelector('.hh');
      const reviewButton = closestCard.querySelector('.review');

      if (cancelButton && reviewButton) { 
        cancelButton.style.display = "none";
        reviewButton.style.display = "none";
      }
    } 
    else if(status === "checkout"){
      const closestCard = statusElem.closest('.card');
      var cancelButton = closestCard.querySelector('.hh');
      if (cancelButton) { 
        cancelButton.style.display = "none";
      }
    } 
      else if(status === "checkin"){
      const closestCard = statusElem.closest('.card');
      var cancelButton = closestCard.querySelector('.hh');
            const reviewButton = closestCard.querySelector('.review');

      if (cancelButton&&reviewButton) { 
        cancelButton.style.display = "none";
                reviewButton.style.display = "none";

      }
    } 
    else if(status === "booked"){
      const closestCard = statusElem.closest('.card');
      const reviewButton = closestCard.querySelector('.review');
      if (reviewButton) { 
        reviewButton.style.display = "none";
      }
    }
    else {
      paymentMessage.innerHTML = "";
    }
  });
});



</script>


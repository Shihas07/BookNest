document.addEventListener("DOMContentLoaded", function() {
    const roomPrice = parseFloat("{{room.price}}");

    function calculateNights(checkInDate, checkOutDate) {
        const oneDay = 24 * 60 * 60 * 1000;
        const firstDate = new Date(checkInDate);
        const secondDate = new Date(checkOutDate);
        const diffDays = Math.round(Math.abs((firstDate - secondDate) / oneDay));
        return diffDays;
    }

    function updateDisplayedPrice() {
        const checkInDate = document.getElementById('check-in-date').value;
        const checkOutDate = document.getElementById('check-out-date').value;

        let totalPrice = roomPrice; // Default to roomPrice

        // If both check-in and check-out dates are valid, calculate total price
        if (checkInDate && checkOutDate) {
            const numberOfNights = calculateNights(checkInDate, checkOutDate);
            totalPrice = roomPrice * numberOfNights;
        }

        document.getElementById('displayed-price').textContent = totalPrice;
        document.getElementById('rr').value=totalPrice;

        // Optional: If you want to send the price to the server
        axios.post('/price', {
            checkInDate: checkInDate,
            checkOutDate: checkOutDate,
            totalPrice: totalPrice
        })
        .then(function(response) {
            console.log("Server response:", response.data);
        })
        .catch(function(error) {
            console.error("Error sending data:", error);
        });
    }

    const checkInDateInput = document.getElementById('check-in-date');
    const checkOutDateInput = document.getElementById('check-out-date');

    // Listen for changes to date inputs
    checkInDateInput.addEventListener('change', updateDisplayedPrice);
    checkOutDateInput.addEventListener('change', updateDisplayedPrice);

    // Set default check-in date to today
    const today = new Date();
    checkInDateInput.valueAsDate = today;

    // Set default check-out date to tomorrow
    const tomorrow = new Date(today);
    tomorrow.setDate(tomorrow.getDate() + 1);
    checkOutDateInput.valueAsDate = tomorrow;

    // Call updateDisplayedPrice to set initial price
    updateDisplayedPrice();
});


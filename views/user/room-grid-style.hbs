<script>
function toggleWishlist(roomId, userId) {
    var button = document.getElementById('wishlist-' + roomId);

    axios.post('/wishlist', {
        roomId: roomId,
    })
    .then(function(response) {
        if (response.data.message === "Room added to wishlist") {
            button.style.backgroundColor = 'rgb(208, 18, 18)';
            localStorage.setItem('wishlist-' + roomId, 'true');
            Toastify({
                text: "Added to wishlist",
                duration: 3000,
                gravity: "top", 
                position: 'center', 
                backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
            }).showToast();
        } else if (response.data.message === "Room removed from wishlist") {
            button.style.backgroundColor = '#e6deded1'; // White color
            localStorage.removeItem('wishlist-' + roomId); // Update localStorage
            Toastify({
                text: "Removed from wishlist",
                duration: 3000,
                gravity: "top", 
                position: 'center', 
                backgroundColor: "red",
            }).showToast();
        } else {
            console.log('Unexpected response:', response.data);
        }
    })
    .catch(function(error) {
        console.error('Error toggling wishlist state', error);
        button.style.backgroundColor = 'red';
        Toastify({
            text: "you Need Login pls!",
            duration: 3000,
            gravity: "top",
            position: 'center', 
            backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
        }).showToast();
    });
}

function setInitialButtonColors() {
    var buttons = document.querySelectorAll('[id^="wishlist-"]');
    buttons.forEach(function(button) {
        var roomId = button.id.split('-')[1];
        var inWishlist = localStorage.getItem('wishlist-' + roomId);
        if (inWishlist === 'true') {
            button.style.backgroundColor = 'rgb(208, 18, 18)';
        } else {
            button.style.backgroundColor = '#e6deded1'; // White color
        }
    });
}

document.addEventListener('DOMContentLoaded', function() {
    setInitialButtonColors(); // Set initial button colors when the page loads
});
</script>




